
x = "A" #declaring variable and asigning the chr value 
for i in range (1,5) : 
    print(x)            #PRINTING X VALUE

    x=chr(ord(x)+1) #VALUE OF THE chr of x set to be increment by 1 means next chr
   
    for j in range(i):
      
       print(x, end="")  #Printing x value for the next chr to shape traingle 
       x=chr(ord(x)+1)   #again after printing the value is set to  be increment by 1 


   
